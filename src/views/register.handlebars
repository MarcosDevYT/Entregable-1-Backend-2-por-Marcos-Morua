<main class="container mx-auto py-6 px-4 flex justify-center">
  <section
    class="max-w-xl w-full p-8 border rounded-lg border-black/10 shadow-lg bg-white"
  >
    <article class="flex flex-col items-center">
      <h1 class="font-semibold text-3xl">Registro de Usuario</h1>
      <form
        class="w-full px-4 py-6 flex flex-col gap-4"
        action="/api/sessions/register"
        method="POST"
      >
        <div class="flex flex-col">
          <label
            class="text-sm font-medium text-gray-700 mb-1"
            for="first_name"
          >Nombre</label>
          <input
            type="text"
            class="file:text-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground dark:bg-input/30 border-black/10 flex h-9 w-full min-w-0 rounded-md border bg-transparent px-3 py-1 text-base transition-[color,box-shadow] outline-none file:inline-flex file:h-7 file:border-0 file:bg-transparent file:text-sm file:font-medium disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm focus-visible:border-black/50 focus-visible:ring-black/50 focus-visible:ring-[1px] shadow-xs bg-background"
            required
            id="first_name"
            name="first_name"
            required
          />
        </div>
        <div class="flex flex-col">
          <label
            class="text-sm font-medium text-gray-700 mb-1"
            for="last_name"
          >Apellido</label>
          <input
            type="text"
            class="file:text-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground dark:bg-input/30 border-black/10 flex h-9 w-full min-w-0 rounded-md border bg-transparent px-3 py-1 text-base transition-[color,box-shadow] outline-none file:inline-flex file:h-7 file:border-0 file:bg-transparent file:text-sm file:font-medium disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm focus-visible:border-black/50 focus-visible:ring-black/50 focus-visible:ring-[1px] shadow-xs bg-background"
            required
            id="last_name"
            name="last_name"
            required
          />
        </div>
        <div class="flex flex-col">
          <label
            class="text-sm font-medium text-gray-700 mb-1"
            for="email"
          >Correo Electrónico</label>
          <input
            type="email"
            class="file:text-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground dark:bg-input/30 border-black/10 flex h-9 w-full min-w-0 rounded-md border bg-transparent px-3 py-1 text-base transition-[color,box-shadow] outline-none file:inline-flex file:h-7 file:border-0 file:bg-transparent file:text-sm file:font-medium disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm focus-visible:border-black/50 focus-visible:ring-black/50 focus-visible:ring-[1px] shadow-xs bg-background"
            required
            id="email"
            name="email"
            required
          />
        </div>
        <div class="flex flex-col">
          <label
            class="text-sm font-medium text-gray-700 mb-1"
            for="age"
          >Edad</label>
          <input
            type="number"
            class="file:text-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground dark:bg-input/30 border-black/10 flex h-9 w-full min-w-0 rounded-md border bg-transparent px-3 py-1 text-base transition-[color,box-shadow] outline-none file:inline-flex file:h-7 file:border-0 file:bg-transparent file:text-sm file:font-medium disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm focus-visible:border-black/50 focus-visible:ring-black/50 focus-visible:ring-[1px] shadow-xs bg-background"
            required
            id="age"
            name="age"
            required
          />
        </div>
        <div class="flex flex-col">
          <label
            class="text-sm font-medium text-gray-700 mb-1"
            for="password"
          >Contraseña</label>
          <input
            type="password"
            class="file:text-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground dark:bg-input/30 border-black/10 flex h-9 w-full min-w-0 rounded-md border bg-transparent px-3 py-1 text-base transition-[color,box-shadow] outline-none file:inline-flex file:h-7 file:border-0 file:bg-transparent file:text-sm file:font-medium disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm focus-visible:border-black/50 focus-visible:ring-black/50 focus-visible:ring-[1px] shadow-xs bg-background"
            required
            id="password"
            name="password"
            required
          />
        </div>
        <button
          type="submit"
          class="cursor-pointer font-medium text-sm w-full flex items-center justify-center px-3 py-2 rounded-md border border-black/10 text-white bg-black hover:bg-black/90 gap-2"
        >
          Registrarse
        </button>
      </form>

      {{#if error}}
        <p class="text-red-600 my-4">{{error}}</p>
      {{/if}}

      <a
        class="font-medium text-sm flex items-center justify-center underline text-blue-600"
        href="/login"
      >
        ¿Ya tienes una cuenta? Inicia sesión aquí
      </a>
    </article>
  </section>
</main>