<form id="limitForm" class="flex items-center gap-2">
  <input
    class="w-10 h-10 px-2 flex items-center justify-center rounded-md border border-black/30 focus:border-black/30 focus:outline-none focus:ring-2 focus:ring-black/30 bg-black/10 placeholder:text-black/70 text-black"
    type="text"
    name="limit"
    id="limitInput"
    value="{{limit}}"
  />

  <button
    class="cursor-pointer font-medium text-sm flex items-center justify-center px-3 py-2 rounded-md border border-black/10 text-white bg-black hover:bg-black/90 gap-2"
    type="submit"
  >
    Cambiar Limite
  </button>
</form>